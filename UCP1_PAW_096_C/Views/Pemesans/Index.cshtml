@model IEnumerable<UCP1_PAW_096_C.Models.Pemesan>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nama Pemesan")
            </th>
            <th>
                @Html.DisplayName("Alamat Pemesan")
            </th>
            <th>
                @Html.DisplayName("No Hp Pemesan")
            </th>
            <th>
                @Html.DisplayName("Total Harga")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaPemesan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlamatPemesan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoHpPemesan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalHarga)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPemesan"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdPemesan"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdPemesan"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
